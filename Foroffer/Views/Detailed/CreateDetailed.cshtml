@model Foroffer.Models.ViewModels.DetailedViewModel

@{
    Layout = "AdminLayout";
}

<section class="buttonpanel">
    <h5 style="font-weight:bold">New Detailed</h5>
</section>
<section class="posts">
    <div class="post-container">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-6 col-12">
                <form method="post" asp-action="CreateDetailed" asp-controller="Detailed" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <label asp-for="Detailed.Outline">Outline</label><br />
                    <textarea asp-for="Detailed.Outline" rows="6" class="texbox"></textarea>
                    <br />
                    <label asp-for="Detailed.CompanyInfo">CompanyInfo</label><br />
                    <textarea asp-for="Detailed.CompanyInfo" rows="6" class="texbox"></textarea>
                    <br />
                    <button class="push" id="btnupload" type="submit">Next</button>
                </form>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-12">

            </div>
            <div class="col-lg-4 col-md-4 col-sm-6 col-12">

            </div>

        </div>
    </div>
</section>



